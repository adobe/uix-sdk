{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig-base.json",
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx"],
  "exclude": ["packages/*/src/**/*.d.ts", "packages/*/src/**/*.d.tsx"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"]
  },
  "references": [
    {
      "path": "packages/uix-core"
    },
    {
      "path": "packages/uix-guest"
    },
    {
      "path": "packages/uix-host"
    },
    {
      "path": "packages/uix-host-react"
    }
  ]
}
